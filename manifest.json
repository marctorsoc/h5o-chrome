{
  "name": "HTML5 Outliner",
  "short_name": "h5o",
  "version": "0.9.1",
  "manifest_version": 3,
  "description": "Generates a navigable page outline with heading and sectioning elements",
  "icons": {
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "permissions": [
    "activeTab",
    "file://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "js": [
        "outliner.min.js",
        "createOutline.js"
      ]
    }
  ],
  "action": {
    "default_icon": "img/16.png",
    "default_title": "Outline",
    "default_popup": "popup.html"
  }
}
